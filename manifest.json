{
    "manifest_version": 3,
    "name": "Panoptes",
    "version": "0.1",
    "description": "Highlights subversive accounts on X.",
    "permissions": [
        "activeTab"
    ],
    "host_permissions": [
        "https://x.com/*",
        "https://twitter.com/*"
    ],
    "content_scripts": [
        {
            "matches": [ "https://x.com/*", "https://twitter.com/*" ],
            "js": [ "accounts.js", "content.js" ],
            "css": [ "styles.css" ]
        }
    ]
}